<h2>List Of My Saved Places</h2>

<!-- <h3 class="center"> CURRENT USER : <%= currentUser.name%>  </h3> -->

<% placesArray.forEach(place => { %>
    <div class="saved-list places">
            <div id="place-name"> <%= place.name %> </div>
            <div> Category: <%= place.category %> </div>
            <div> <a href=<%= place.yelpUrl %> target="_blank">Yelp Website</a> </div>
                    
        <form id="" action="/notes" method="POST">
            <input class="form-control-sm" type="text" name="note" id="note inputSmall" size="40" placeholder="type your note here">
            <input type="hidden" name="id" value="<%= place.id %>">
            <button class="btn btn-outline-success btn-sm" type="submit" id="add-note">ADD NOTE</button>
        </form>
        
        <form id="" action="/places/?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="<%= place.id %>">
            <button class="btn btn-sm btn-danger" type="submit" id="remove-place">REMOVE PLACE FROM SAVED LIST</button>
        </form>
        
    </div>
<% }) %>