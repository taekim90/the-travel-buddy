<a class="center" href="/user">NEW SEARCH</a>

<a class="center" href="/places">SAVED PLACES</a>

<h3 class="center big-vertical">SEARCH RESULTS</h3>

<% response.jsonBody.businesses.forEach(businesses => { %>
    <li><%= businesses.name %></li>
    <img src="<%= businesses.image_url %>" alt="business image" width="40%"/>
    <p>Rating: <%= businesses.rating %></p>
    <p>Review Count: <%= businesses.review_count %></p>
    <p>Price: <%= businesses.price %></p>
    <p>Address: <%= businesses.location.display_address %></p>
    <p><a href=<%= businesses.url %> target="_blank">Yelp Website</a></p>
    
    <form id="" action="/places" method="POST">
        <input type="hidden" name="name" value="<%= businesses.name %>">
        <input type="hidden" name="yelpUrl" value="<%= businesses.url %>">
        <input type="hidden" name="category" value="<%= businesses.categories[0].alias %>">
        <button type="submit" id="add">ADD TO PLACES</button>
    </form>    
<% }) %>